<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.registered.ChatActivity">
    <LinearLayout
        android:id="@+id/ll_chat_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_gestur_voice"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:paddingVertical="15dp"
            android:background="@color/mainBlue"
            android:paddingHorizontal="25dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:background="@drawable/bg_shape_register"
            android:backgroundTint="@color/bgBlue"
            android:layout_height="400dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:clipToPadding="true"
                    android:id="@+id/recycler_view"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_gestur_voice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ll_chat_room"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_mic_input_name"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_mic_off_24"
            app:tint="@color/mainBlue"
            />
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/iv_is_speech"
            android:layout_width="100dp"
            android:layout_marginTop="10dp"
            android:layout_height="60dp"
            android:src="@drawable/sound"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/iv_not_speech"
            android:layout_width="119dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_not_speech"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_user_input"
            android:paddingHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/none"
            android:textColor="@color/textGray"
            android:textSize="18sp"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>